{
    "functions": {
        "api/index.py": {
            "maxDuration": 60,
            "includeFiles": [
                "core/**",
                "db/**",
                "data/**",
                "api/**",
                "requirements.txt"
            ]
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        }
    ]
}